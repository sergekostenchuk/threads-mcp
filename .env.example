# Threads MCP Server Configuration
# Copy this file to .env and fill in your values

# REQUIRED: Threads App Credentials
# Get these from https://developers.facebook.com/apps/
THREADS_APP_ID=your_app_id_here
THREADS_APP_SECRET=your_app_secret_here

# OPTIONAL: Pre-configured Access Token
# Generated after OAuth flow, allows skipping authentication
THREADS_ACCESS_TOKEN=

# OPTIONAL: Threads User ID
# Your Threads account ID
THREADS_USER_ID=

# OAuth Configuration
OAUTH_REDIRECT_URI=http://localhost:3000/callback
OAUTH_SCOPE=threads_basic,threads_content_publish,threads_manage_insights,threads_manage_replies,threads_read_replies

# MCP Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8766

# API Configuration
API_VERSION=v1.0
API_BASE_URL=https://graph.threads.net
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Storage Paths
DATA_DIR=/data
CACHE_DIR=/data/cache
SESSION_DIR=/data/sessions

# Logging
LOG_LEVEL=info
# Options: error, warn, info, http, verbose, debug, silly
LOG_FILE=/logs/threads-mcp.log
LOG_FORMAT=json
# Options: json, simple, combined

# Performance Tuning
MAX_CONNECTIONS=100
WORKER_THREADS=4
TIMEOUT_MS=30000
CACHE_TTL=300
REQUEST_TIMEOUT=10000
MAX_RETRIES=3

# Security
ENABLE_CORS=true
CORS_ORIGIN=*
SESSION_SECRET=your-secret-key-change-me
SESSION_MAX_AGE=86400000
ENABLE_HELMET=true

# Redis Cache (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=threads:

# Monitoring (optional)
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
SENTRY_DSN=

# Media Upload Settings
MAX_IMAGE_SIZE=8388608
# 8MB in bytes
MAX_VIDEO_SIZE=104857600
# 100MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/jpg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/quicktime

# Content Moderation
ENABLE_CONTENT_FILTER=false
FILTER_PROFANITY=false
FILTER_SPAM=false

# Rate Limiting Per Endpoint
RATE_LIMIT_CREATE_POST=10
RATE_LIMIT_DELETE_POST=20
RATE_LIMIT_GET_INSIGHTS=100

# Webhook Settings (optional)
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# Debug Mode (development only)
DEBUG=false
VERBOSE=false
LOG_REQUESTS=false